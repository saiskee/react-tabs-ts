{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "jsx": "react",
    "sourceMap": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "karma-chai-sinon"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "**/*.spec.tsx?",
    "dist"
  ]
}
